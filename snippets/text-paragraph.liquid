{% comment %} Font Size {% endcomment %}
{% if size == 'body' %}
  {% assign text_size = 'kl-font-body-size' %}
{% elsif size == 'medium' %}
  {% assign text_size = 'kl-font-body-medium-size' %}
{% elsif size == 'product' %}
  {% assign text_size = 'kl-font-body-product-size' %}
{% elsif size == 'large' %}
  {% assign text_size = 'kl-font-body-large-size' %}
{% endif %}

{% comment %} Text Align {% endcomment %}
{% if align == 'center' %}
  {% assign text_align = 'text-center' %}
{% else %}
  {% assign text_align = '' %}
{% endif %}

{% if color == 'light' %}
  {% assign text_color = 'kl-color-light' %}
{% else %}
  {% assign text_color = 'kl-color-body' %}
{% endif %}

{% if padding == 'none' %}
  {% assign text_padding = '' %}
{% else %}
  {% assign text_padding = 'mb-6' %}
{% endif %}

<!-- {{ text_size }} -->
<p class="kl-font-body {{ text_color }} {{ text_padding }} {{ text_size }} {{ text_align }}">
 {{ text }}
</p>