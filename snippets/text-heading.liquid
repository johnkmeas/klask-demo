{% if icon == true %}
  {% assign icon_accent = 'kl-icon kl-icon-volt' %}
{% else %}
  {% assign icon_accent = '' %}
{% endif %}

{% if h_type == 'h1' %}
  {% assign h_type = 'h1' %}
{% else %}
  {% assign h_type = 'h2' %}
{% endif %}


<{{ h_type }} class="kl-font-header kl-h1 kl-color-heading kl-font-header-weight text-center pb-5 sm:pb-10 {{ icon_accent }}">
  {{ text }}
</{{ h_type }}>

<style>
  .kl-icon:before {
    content: "";
    display: inline-block;
  }

  .kl-icon-volt::before {
    content: "";
    background: url({{ 'icon-volt.svg' | asset_url }}) no-repeat;
    width: 50px;
    height: 50px;
    margin-left: -50px;
    position: absolute;
  }

  .kl-icon-volt::after {
    content: "";
    background: url({{ 'icon-volt.svg' | asset_url }}) no-repeat;
    width: 50px;
    height: 50px;
    position: absolute;
    transform: scaleX(-1);
  }
</style>