{% if toggle == true %}
  {% assign data = 'data=' | append: all_products[ product].handle %}
{% else %}
  {% assign data = '' %}
{% endif %}

{% if active == 'active' %}
  {% assign display = 'block' %}
{% elsif  active == 'non-active' %}
  {% assign display = 'none' %}
{% endif %}

<div {{data}} class="js-product kl-border-product kl-card-rounded sm:p-8 md:p-12 flex flex-col justify-between" style="display: {{ display }};">
  <h3 class="hidden sm:block kl-font-header k1-font-header-product-size kl-color-body text-center font-bold">{{ all_products[ product].title }}</h3>
  <div>
    <div class="px-12 sm:px-0">
      {% render 'text-paragraph' with size: 'product', align: 'center', text: text %}
    </div>
    <div class="flex justify-center">
      <img class="flex justify-center" src="{{ all_products[ product].featured_image | img_url: "large" }}" alt="">
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-12 row-gap-5 lg:row-gap-0 lg:gap-5 pt-4 px-10 sm:pt-10 sm:px-4 lg:px-4 xl:px-8">
      <span class="col-span-5 kl-h2 kl-font-body kl-color-body kl-font-header-weight text-center flex flex-col justify-center">
        {{ all_products[ product].price | money }}
      </span>
      {% render 'button' with text: 'ADD TO CART', url: section.settings.button_url, color: 'blue', span: 'col-span-7' %}

    </div>
  </div>
</div>