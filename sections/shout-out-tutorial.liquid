<section class="sm:py-20">
  <!-- Slide content-->
  <div class="container sm:mx-auto pb-2 sm:pb-5">
    <div class="sm:grid sm:grid-cols-3 ">
      <div class="col-span-1 kl-bg-yellow p-10 kl-tutorial-left-rounded">
        <div class="flex flex-col">

          <h3 class="kl-h3-tutorial kl-font-header kl-color-heading text-center mb-5">
            {{ section.settings.heading }}
          </h3>
          {% render 'button' with color: 'white', url: section.settings.video_url, type: 'video', text: section.settings.video_play_text, custom_class: 'mb-5' %}
          <div>
            {% render 'text-paragraph' with size: 'tutorial', text: section.settings.content, color_class: 'kl-color-body-blue' %}
          </div>
          <a class="kl-h4 kl-color-heading kl-font-header-weight underline" href="section.settings.cta_1_url">
            {{ section.settings.cta_1_text }}
          </a>
          <a class="kl-h4 kl-color-heading kl-font-header-weight underline" href="section.settings.cta_2_url">
            {{ section.settings.cta_2_text }}
          </a>
        </div>
      </div>
      <div class="hidden sm:block col-span-2 kl-tutorial-right-rounded bg-cover bg-center" style="background-image: url({{ section.settings.video_thumbnail.src | img_url: 'master' }})">
      </div>
    </div>
  </div>

</section>

<style>
  .kl-slick-nav-align-center {
    display: flex;
    align-items: center;
  }
</style>

{% schema %}
  {
    "name": "Shout Out Tutorial",
    "settings": [
      {
        "type": "header",
        "content": "Tutorial"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "info": "Text",
        "placeholder": "Text"
      },
      {
        "type": "text",
        "id": "video_play_text",
        "label": "Video Play Text"
      },
      {
        "type": "image_picker",
        "id": "video_thumbnail",
        "label": "Video Thumbnail"
      },
      {
        "type": "header",
        "content": "Primary Call to Action"
      },
      {
        "type": "text",
        "id": "cta_1_text",
        "label": "Call to Action"
      },
      {
        "type": "url",
        "id": "call_1_url",
        "label": "Url"
      },
      {
        "type": "header",
        "content": "Secondary Call to Action"
      },
      {
        "type": "text",
        "id": "cta_2_text",
        "label": "Call to Action"
      },
      {
        "type": "url",
        "id": "call_2_url",
        "label": "Url"
      }
    ],

    "presets": [
      {
        "name": "Shout Out Tutorial",
        "category": "Shout Out"
      }
    ]
  }
{% endschema %}
