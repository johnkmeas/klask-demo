<section class="py-10 pb-16 sm:py-20">
  <!-- Slide content-->
  <div class="container px-4 sm:mx-auto">
    <ul class="slick-review-content">
      {% for block in section.blocks %}
        <li class="">
          {% render 'text-paragraph' with size: 'large', align: 'center', text: block.settings.review_body %}
        </li>
      {% endfor %}
    </ul>
  </div>
  <!-- Slide nav-->
  <ul class="slick-review-nav">
    {% for block in section.blocks %}
      <li class="">
        <img src="{{ block.settings.logo_thumbnail.src | img_url: 'x300' }}" alt="{{ block.settings.logo_thumbnail.alt }}" class="script">
      </li>
    {% endfor %}
  </ul>
</section>

{% schema %}
  {
    "name": "Review Slider",
    "settings": [
      {
        "type": "header",
        "content": "Reviews"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "select",
        "name": "Add Review",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo_thumbnail",
            "label": "Review Logo"
          },
          {
            "type": "textarea",
            "id": "review_body",
            "label": "Review Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Review Slider",
        "category": "Slider"
      }
    ]
  }
{% endschema %}

<script>
document.addEventListener('DOMContentLoaded', function(event) {
  $(document).ready(function() {


   $('.slick-review-content').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: true,
      fade: true,
      infinite: true,
      adaptiveHeight: true,
      asNavFor: '.slick-review-nav'
    });

    $('.slick-review-nav').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      asNavFor: '.slick-review-content',
      dots: false,
      focusOnSelect: true,
      infinite: true,
      responsive: [{
        breakpoint: 640,
        settings: {
          slidesToShow: 3,
          dots: true,
          arrows: false,
        },
      }]
    });

  });
});
</script>