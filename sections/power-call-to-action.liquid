<section class="sm:py-20">
  <!-- Slide content-->
  <div class="container sm:mx-auto pb-2 sm:pb-5">
    <div class="sm:grid sm:grid-cols-3 ">
      <div class="col-span-1 p-10 kl-tutorial-left-rounded">
        <div class="flex flex-col">
          <span class="kl-font-shout-out-size kl-font-shout-line-height kl-font-header kl-color-heading mb-5">
            {{ section.settings.heading }}
          </span>
          <span class="kl-h3 kl-font-header kl-color-yellow text-center mb-5">
            {{ section.settings.sub_heading }}
          </span>
        </div>
      </div>
      <div>
        {% assign embed_key = section.settings.video_url | split: 'https://youtu.be/' %}
        {% assign embed_key = embed_key | last %}
        {% assign embed_key = 'https://www.youtube.com/embed/' | append:  embed_key | append: '?rel=0&modestbranding=1&autohide=1&showinfo=0&controls=0' %}
        {{ embed_key}}

        <iframe width="560" height="315" src="{{ embed_key }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
      {% comment %} <div class="hidden sm:block col-span-2 kl-tutorial-right-rounded bg-cover bg-center" style="background-image: url({{ section.settings.video_thumbnail.src | img_url: 'master' }})">
      </div> {% endcomment %}
    </div>
  </div>

</section>

<script>
document.addEventListener('DOMContentLoaded', function(event) {
  $(document).ready(function() {


  });
});
</script>
{% schema %}
  {
    "name": "Power Call to Action",
    "settings": [
      {
        "type": "header",
        "content": "Call to Action"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "info": "Text",
        "placeholder": "Text"
      },
      {
        "type": "image_picker",
        "id": "custom_thumbnail",
        "label": "Video Custom Thumbnail"
      }
    ],

    "presets": [
      {
        "name": "Power Call to Action",
        "category": "Call to Action"
      }
    ]
  }
{% endschema %}
